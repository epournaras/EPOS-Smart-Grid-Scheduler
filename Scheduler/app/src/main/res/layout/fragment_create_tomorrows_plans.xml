<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action Name"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
            <Spinner
                android:id="@+id/spActiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/startTimeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="00:00"
                        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

                    <Space
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/endTimeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="23:59"
                        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id = "@+id/minTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pick_time"
                    android:layout_weight = "1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />

                <Button
                    android:id = "@+id/maxTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/pick_time_2"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="0.67"
                    android:text="Duration (hh:mm)"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget" />
                <RelativeLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Start Time (hh:mm)"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="0.33">

                    <Spinner
                        android:id="@+id/spinnerOptHr"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

                    <Spinner
                        android:id="@+id/spinnerOptMin"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textColor="#000000"
                        android:textSize="8sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="0.33">

                    <Spinner
                        android:id="@+id/spinnerDurHr"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

                    <Spinner
                        android:id="@+id/spinnerDurMin"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textSize="8sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/addItemButton"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0.33"
                    android:text="Add"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Action"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Optimal Time"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget" />

            </LinearLayout>

            <TextView
                android:id="@+id/addedActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scheduling Progress"
                android:layout_gravity="center"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Flexibility in time range"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/flexibilitySeekBar"
                android:max = "30"
                android:progress = "1"/>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:text="Remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/removeButton"
                    android:layout_gravity="start"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text ="Send"
                    android:onClick="sendMessage"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:id="@+id/sendButton" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>