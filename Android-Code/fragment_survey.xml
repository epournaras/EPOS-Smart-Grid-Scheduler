<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView02"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >



        <LinearLayout android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demographics Survey"
                android:id = "@+id/titleText"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1"
                android:id = "@+id/text"
                android:layout_gravity="left"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerAnswers"
                    android:layout_gravity="left"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 2"
                android:id = "@+id/text1"
                android:layout_gravity="left"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerAnswers1"
                    android:layout_gravity="left"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 3"
                android:id = "@+id/text2"
                android:layout_gravity="left"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerAnswers2"
                    android:layout_gravity="left"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 4"
                android:id = "@+id/text3"
                android:layout_gravity="left"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerAnswers3"
                    android:layout_gravity="left"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 5"
                android:id = "@+id/text4"
                android:layout_gravity="left"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerAnswers4"
                    android:layout_gravity="left"/>
            </LinearLayout>
            <Button
                android:id = "@+id/Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Answers"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
